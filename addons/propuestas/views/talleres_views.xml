<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Vistas para Talleres -->

        <record id="view_talleres_form" model="ir.ui.view">
            <field name="name">formulario_talleres</field>
            <field name="model">propuestas.talleres</field>
            <field name="arch" type="xml">
                <form string="Formulario Talleres">
                    <sheet>
                        <group>
                            <field name="fecha"/>
                            <field name="propuestas_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_talleres_tree" model="ir.ui.view">
            <field name="name">arbol_talleres</field>
            <field name="model">propuestas.talleres</field>
            <field name="arch" type="xml">
                <tree string="Listado Talleres">
                            <field name="fecha"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>

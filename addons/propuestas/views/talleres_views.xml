<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Vistas para Talleres -->

        <record model="ir.ui.view" id="vista_formulario_talleres">
            <field name="name">talleres.form</field>
            <field name="model">propuestas.talleres</field>
            <field name="arch" type="xml">
                <form string="Formulario Talleres">
                    <sheet>
                        <group>
                            <field name="fecha"/>
                            <field name="propuestas_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="vista_arbol_talleres">
            <field name="name">talleres.tree</field>
            <field name="model">propuestas.talleres</field>
            <field name="arch" type="xml">
                <tree string="Listado Talleres">
                            <field name="fecha"/>
                </tree>
            </field>
        </record>

        <!-- Accion de ventana para Talleres -->

        <record model="ir.actions.act_window" id="accion_listar_talleres">
            <field name="name">Talleres</field>
            <field name="res_model">propuestas.talleres</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear taller</p>
            </field>
        </record>

        <!-- Menu Talleres (top level menu: no parent) -->
        <menuitem id="talleres_main_menu" name="Talleres" groups="fomdes.group_gerente_credito"/>
        <!-- Submenu para Talleres -->
        <menuitem id="talleres_menu" name="Talleres" parent="talleres_main_menu"/>
        <!-- Entrada de menu para el modelo de Talleres -->
        <menuitem id="talleres_lista_menu" name="Talleres" parent="talleres_menu" action="accion_listar_talleres"/>

    </data>
</openerp>

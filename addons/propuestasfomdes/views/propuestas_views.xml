        <!-- Vistas para Solicitantes -->

        <record model="ir.ui.view" id="vista_formulario_solicitantes">
            <field name="name">solicitantes.form</field>
            <field name="model">propuestasfomdes.solicitantes</field>
            <field name="arch" type="xml">
                <form string="Formulario Solicitante">
                    <sheet>
                        <group>
                            <field name="cedula"/>
                            <field name="nombres"/>
                            <field name="apellidos"/>
                            <field name="rif"/>
                            <field name="fecha_nacimiento"/>
                            <field name="edad"/>
                            <field name="genero"/>
                            <field name="direccion"/>
                            <field name="municipio"/>
                            <field name="parroquia"/>
                            <field name="profesion_oficio"/>
                            <field name="telefono_fijo"/>
                            <field name="telefono_celular"/>
                            <field name="email"/>
                            <field name="unidades_productivas_ids"/>
                            <field name="propuestas_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="vista_arbol_solicitantes">
            <field name="name">solicitantes.tree</field>
            <field name="model">propuestasfomdes.solicitantes</field>
            <field name="arch" type="xml">
                <tree string="Listado Solicitantes">
                    <field name="cedula"/>

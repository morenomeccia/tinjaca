<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Vistas para Solicitantes -->

        <record model="ir.ui.view" id="vista_formulario_solicitantes">
            <field name="name">solicitantes.form</field>
            <field name="model">propuestasfomdes.solicitantes</field>
            <field name="arch" type="xml">
                <form string="Formulario Solicitante">
                    <sheet>
                        <group>
                            <field name="cedula"/>
                            <field name="nombres"/>
                            <field name="apellidos"/>
                            <field name="rif"/>
                            <field name="fecha_nacimiento"/>
                            <field name="edad"/>
                            <field name="genero"/>
                            <field name="direccion"/>
                            <field name="municipio"/>
                            <field name="parroquia"/>
                            <field name="profesion_oficio"/>
                            <field name="telefono_fijo"/>
                            <field name="telefono_celular"/>
                            <field name="email"/>
                            <field name="unidades_productivas_ids"/>
                            <field name="propuestas_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="vista_arbol_solicitantes">
            <field name="name">solicitantes.tree</field>
            <field name="model">propuestasfomdes.solicitantes</field>
            <field name="arch" type="xml">
                <tree string="Listado Solicitantes">
                    <field name="cedula"/>
                    <field name="nombres"/>
                    <field name="apellidos"/>
                </tree>
            </field>
        </record>

        <!-- Vistas para Propuestas -->

        <record model="ir.ui.view" id="vista_formulario_propuestas">
            <field name="name">propuestas.form</field>
            <field name="model">propuestasfomdes.propuestas</field>
            <field name="arch" type="xml">
                <form string="Formulario Propuestas">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="button_viable" 
								type="workflow"
                                string="Viable" 
								states="estacion_1_propuesta_recibida"
                                class="oe_highlight"/>
                        <button name="button_asistio" 
								type="workflow"
                                string="Asistio" 
								states="estacion_2_taller"
                                class="oe_highlight"/> 
                    </header>
                    <sheet>
                        <group>
                            <field name="solicitantes_id"/>
                            <field name="codigo_propuesta"/>
                            <field name="unidades_productivas_id"/>
                            <field name="actividades_productivas_id"/>
                            <field name="referencias_solicitante_ids"/>
                            <field name="garantias_ids"/>
                            <field name="avalistas_ids"/>
                            <!-- <field name="referencias_avalista_ids"/> -->
                            <field name="inversiones_ids"/>
                            <field name="inversion_total"/>
                            <field name="aporte_propio"/>
                            <field name="consigno_facturas"/>
                            <field name="observaciones"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="vista_arbol_propuestas">
            <field name="name">propuestas.tree</field>
            <field name="model">propuestasfomdes.propuestas</field>
            <field name="arch" type="xml">
                <tree string="Listado Propuestas">
                    <field name="codigo_propuesta"/>
                    <field name="solicitantes_id"/>
                </tree>
            </field>
        </record>

        <!-- Vistas para Talleres -->

        <record model="ir.ui.view" id="vista_formulario_talleres">
            <field name="name">talleres.form</field>
            <field name="model">propuestasfomdes.talleres</field>
            <field name="arch" type="xml">
                <form string="Formulario Talleres">
                    <sheet>
                        <group>
                            <field name="codigo"/>
                            <field name="fecha"/>
                            <field name="responsable"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="vista_arbol_talleres">
            <field name="name">talleres.tree</field>
            <field name="model">propuestasfomdes.talleres</field>
            <field name="arch" type="xml">
                <tree string="Listado Talleres">
                            <field name="codigo"/>
                            <field name="fecha"/>
                            <field name="responsable"/>
                </tree>
            </field>
        </record>

        <!-- Caja de busqueda para Propuestas -->
		<record model="ir.ui.view" id="propuestas_search_view">
		    <field name="name">Caja de busqueda propuestas</field>
		    <field name="model">propuestasfomdes.propuestas</field>
		    <field name="arch" type="xml">
		        <search>
                    <field name="codigo_propuesta"/>
                    <field name="solicitantes_id"/>
		        </search>
		    </field>
		</record>


        <!-- Accion de ventana para Solicitantes -->

        <record model="ir.actions.act_window" id="accion_listar_solicitantes">
            <field name="name">Solicitantes</field>
            <field name="res_model">propuestasfomdes.solicitantes</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear solicitante</p>
            </field>
        </record>

        <!-- Accion de ventana para Propuestas -->

        <record model="ir.actions.act_window" id="accion_listar_propuestas">
            <field name="name">Propuestas</field>
            <field name="res_model">propuestasfomdes.propuestas</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear propuesta</p>
            </field>
        </record>

        <!-- Accion de ventana para Talleres -->

        <record model="ir.actions.act_window" id="accion_listar_talleres">
            <field name="name">Talleres</field>
            <field name="res_model">propuestasfomdes.talleres</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear taller</p>
            </field>
        </record>

        <!-- Menu Propuestas (top level menu: no parent) -->
        <menuitem id="propuestas_main_menu" name="Propuestas"/>

        <!-- Submenu para Solicitantes -->
        <menuitem id="solicitantes_menu" name="Solicitantes" parent="propuestas_main_menu"/>
        <!-- Entrada de menu para el modelo de Solicitantes -->
        <menuitem id="solicitudes_lista_menu" name="Solicitantes" parent="solicitantes_menu" action="accion_listar_solicitantes"/>

        <!-- Submenu para Propuestas -->
        <menuitem id="propuestas_menu" name="Propuestas" parent="propuestas_main_menu"/>
        <!-- Entrada de menu para el modelo de Solicitantes -->
        <menuitem id="propuestas_lista_menu" name="Propuestas" parent="propuestas_menu" action="accion_listar_propuestas"/>

        <!-- Submenu para Talleres -->
        <menuitem id="talleres_menu" name="Talleres" parent="propuestas_main_menu"/>
        <!-- Entrada de menu para el modelo de Talleres -->
        <menuitem id="propuestas_lista_menu" name="Talleres" parent="talleres_menu" action="accion_listar_talleres"/>

    </data>
</openerp>

<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Creacion de la vista para mostrar solicitudes -->

        <record model="ir.ui.view" id="vista_formulario_solicitudes">
            <field name="name">solicitudes.form</field>
            <field name="model">solicitudes.solicitudes</field>
            <field name="arch" type="xml">
                <form string="Formulario Solicitudes">
                    <header>
                        <button name="button_analisis_juridico" type="workflow"
                                string="Enviar a Analisis Juridico" states="1"
                                class="oe_highlight"/>
                        <button name="button_analisis_economico" type="workflow"
                                string="Enviar a Analisis Economico" states="2"
                                class="oe_highlight"/>
                        <button name="button_gerencia_credito" type="workflow"
                                string="Enviar a Gerencia de Credito" states="3"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="nro_expediente"/>
                            <field name="sector"/>
                            <field name="informe_tecnico_id">
                                <tree string="Informes tÃ©cnicos">
                                    <field name="tipo_empresa"/>
                                    <field name="fecha_elaboracion"/>
                                </tree>
                            </field>
                            <field name="requisitos_generales_id">
                                <tree string="Requisitos Generales">
                                    <field name="tipo_documento"/>
                                    <field name="valido"/>
                                </tree>
                            </field>
                            <field name="requisitos_sector_id">
                                <tree string="Requisitos sector">
                                    <field name="documentos_sector_id"/>
                                    <field name="valido"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="vista_arbol_solicitudes">
            <field name="name">solicitudes.tree</field>
            <field name="model">solicitudes.solicitudes</field>
            <field name="arch" type="xml">
                <tree string="Listado Solicitudes">
                    <field name="nro_expediente"/>
                </tree>
            </field>
        </record>

        <!-- Creacion de la vista para mostrar requisitos generales -->

        <record model="ir.ui.view" id="vista_formulario_requisitos_generales">
            <field name="name">requisitos_generales.form</field>
            <field name="model">solicitudes.requisitos_generales</field>
            <field name="arch" type="xml">
                <form string="Formulario Requisitos Generales">
                    <sheet>
                        <group>
                            <field name="solicitudes_id"/>
                            <field name="tipo_documento"/>
                            <field name="documento"/>
                            <field name="observaciones"/>
                            <field name="valido"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Creacion de la vista para mostrar requisitos sector -->

        <record model="ir.ui.view" id="vista_formulario_requisitos_sector">
            <field name="name">requisitos_sector.form</field>
            <field name="model">solicitudes.requisitos_sector</field>
            <field name="arch" type="xml">
                <form string="Formulario Requisitos Sector">
                    <sheet>
                        <group>
                            <field name="solicitudes_id"/>
                            <field name="documentos_sector_id"/>
                            <!-- <field name="documentos_sector_id" domain="[('sector','ilike','solicitudes_id.sector')]"/> -->
                            <field name="documento"/>
                            <field name="observaciones"/>
                            <field name="valido"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Creacion de la vista para mostrar control previo -->

        <record model="ir.ui.view" id="vista_formulario_control_previo">
            <field name="name">control_previo.form</field>
            <field name="model">solicitudes.control_previo</field>
            <field name="arch" type="xml">
                <form string="Formulario Control Previo">
                    <sheet>
                        <group>
                            <field name="codigo_analisis_juridico"/>
                            <field name="nro_expediente"/>
                            <field name="descripcion_garantia"/>
                            <field name="estatus_analisis_juridico"/>
                            <field name="codigo_credito"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Creacion de la vista para mostrar las inspecciones -->

        <record model="ir.ui.view" id="vista_formulario_inspeccciones">
            <field name="name">inspecciones.form</field>
            <field name="model">solicitudes.inspecciones</field>
            <field name="arch" type="xml">
                <form string="Formulario Inspecciones">
                    <sheet>
                        <group>
                            <field name="nro_expediente"/>
                            <field name="tiempo_funcionamiento"/>
                            <field name="cantidad_productos"/>
                            <field name="costos_actividad"/>
                            <field name="sistema_produccion"/> 
                            <field name="clientes"/>
                            <field name="distribucion_espacio_fisico"/> 
                            <field name="condicion_fisica_sanitaria"/>
                            <field name="maquinaria"/>
                            <field name="materia_prima"/> 
                            <field name="observaciones"/>
                            <field name="firma"/>
                            <field name="codigo_credito"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Creacion de la vista para mostrar el informe tecnico -->

        <record model="ir.ui.view" id="vista_formulario_informe_tecnico">
            <field name="name">informe_tecnico.form</field>
            <field name="model">solicitudes.informe_tecnico</field>
            <field name="arch" type="xml">
                <form string="Formulario Informe Tecnico">
                    <sheet>
                        <group>
                            <field name="solicitudes_id">
                                <tree string="Solicitud">
                                    <field name="nro_expediente"/>
                                </tree>
                            </field>
                            <field name="codigo_informe"/>
                            <field name="fecha_elaboracion"/>
                            <field name="tipo_empresa"/>
                            <field name="Saldo_Balance_Personal"/>  
                            <field name="Organizacion_Juridica"/> 
                            <field name="Recomendaciones"/> 
                            <field name="informe_fotografico_inspeccion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="vista_arbol_informe_tecnico">
            <field name="name">informe_tecnico.tree</field>
            <field name="model">solicitudes.informe_tecnico</field>
            <field name="arch" type="xml">
                <tree string="Listado Informe Tecnico">
                    <field name="solicitudes_id"/>
                    <field name="codigo_informe"/>
                </tree>
            </field>
        </record>

        <!-- Accion de ventana para solicitudes -->

        <record model="ir.actions.act_window" id="accion_listar_solicitudes">
            <field name="name">Solicitudes</field>
            <field name="res_model">solicitudes.solicitudes</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear solicitud</p>
            </field>
        </record>

        <!-- Accion de ventana para control previo -->

        <record model="ir.actions.act_window" id="accion_listar_controles_previos">
            <field name="name">Controles Previos</field>
            <field name="res_model">solicitudes.control_previo</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear control previo</p>
            </field>
        </record>

        <!-- Accion de ventana para las inspecciones -->

        <record model="ir.actions.act_window" id="accion_listar_inspecciones">
            <field name="name">Inspecciones</field>
            <field name="res_model">solicitudes.inspecciones</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear inspeccion</p>
            </field>
        </record>

       <!-- Accion de ventana para el informe tecnico -->

        <record model="ir.actions.act_window" id="accion_listar_informes_tecnicos">
            <field name="name">Informes Tecnicos</field>
            <field name="res_model">solicitudes.informe_tecnico</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear informe tecnico</p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="menu_principal_informacion_credito" name="Informacion de Credito"/>
        <!-- Submenu para Solicitudes -->
        <menuitem id="menu_solicitudes_informacion_credito" name="Solicitudes" parent="menu_principal_informacion_credito"/>
        <!-- Entrada de menu para el modelo de Solicitudes -->
        <menuitem id="item_solicitudes_informacion_credito" name="Listar solicitudes" parent="menu_solicitudes_informacion_credito" action="accion_listar_solicitudes"/>

        <!-- top level menu: no parent -->
        <menuitem id="menu_principal_analisis_juridico" name="Analisis Juridico"/>
        <!-- Submenu para Solicitudes -->
        <menuitem id="menu_solicitudes_analisis_juridico" name="Solicitudes" parent="menu_principal_analisis_juridico"/>
        <!-- Entrada de menu para el modelo de Solicitudes -->
        <menuitem id="item_solicitudes_analisis_juridico" name="Listar solicitudes" parent="menu_solicitudes_analisis_juridico" action="accion_listar_solicitudes"/>
        <!-- Submenu para Analisis Juridico -->
        <menuitem id="menu_solicitudes" name="Solicitudes" parent="menu_principal_analisis_juridico"/>
        <menuitem id="menu_juridico" name="Garantias" parent="menu_principal_analisis_juridico"/>
        <!-- Entrada de menu para el modelo de Control Previo -->
        <menuitem id="item_control_previo" name="Listar Controles Previos" parent="menu_juridico" action="accion_listar_controles_previos"/>


        <!-- top level menu: no parent -->
        <menuitem id="menu_principal_analisis_economico" name="Analisis Economico"/>
        <!-- Submenu para Solicitudes -->
        <menuitem id="menu_solicitudes_analisis_economico" name="Solicitudes" parent="menu_principal_analisis_economico"/>
        <!-- Entrada de menu para el modelo de Solicitudes -->
        <menuitem id="item_solicitudes_analisis_economico" name="Listar solicitudes" parent="menu_solicitudes_analisis_economico" action="accion_listar_solicitudes"/>
        <!-- Submenu para Analisis Economico -->
        <menuitem id="menu_economico" name="Inspecciones" parent="menu_principal_analisis_economico"/>
        <!-- Entrada de menu para el modelo de Inspecciones -->
        <menuitem id="item_inspecciones" name="Listar Inspecciones" parent="menu_economico" action="accion_listar_inspecciones"/>
        <!-- Entrada de menu para el modelo de Informe Tecnico -->
        <menuitem id="item_informe_tenico" name="Listar Informes tecnicos" parent="menu_economico" action="accion_listar_informes_tecnicos"/>

        <!-- top level menu: no parent -->
        <menuitem id="menu_principal_gerencia_credito" name="Gerencia de Credito"/>
        <!-- Submenu para Solicitudes -->
        <menuitem id="menu_solicitudes_gerencia_credito" name="Solicitudes" parent="menu_principal_gerencia_credito"/>
        <!-- Entrada de menu para el modelo de Solicitudes -->
        <menuitem id="item_solicitudes_gerencia_credito" name="Listar solicitudes" parent="menu_solicitudes_gerencia_credito" action="accion_listar_solicitudes"/>


        <!-- Full id location:
             action="solicitudes.accion_listar_inspecciones"
             It is not required when it is the same module -->

    </data>
</openerp>

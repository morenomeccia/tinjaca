<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Creacion de la vista para mostrar solicitudes -->

        <record model="ir.ui.view" id="vista_forma_solicitudes">
            <field name="name">solicitudes.form</field>
            <field name="model">solicitudes.solicitudes</field>
            <field name="arch" type="xml">
                <form string="Formulario Solicitudes">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="informe_tecnico_id">
                                <tree string="Informes tÃ©cnicos">
                                    <field name="tipo_empresa"/>
                                    <field name="fecha_elaboracion"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="vista_arbol_solicitudes">
            <field name="name">solicitudes.tree</field>
            <field name="model">solicitudes.solicitudes</field>
            <field name="arch" type="xml">
                <tree string="Listado Solicitudes">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Creacion de la vista para mostrar talleres -->

        <record model="ir.ui.view" id="vista_forma_talleres">
            <field name="name">talleres.form</field>
            <field name="model">solicitudes.talleres</field>
            <field name="arch" type="xml">
                <form string="Formulario Talleres">
                    <sheet>
                        <group>
                            <field name="fecha"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Creacion de la vista para mostrar control previo -->

        <record model="ir.ui.view" id="vista_forma_control_previo">
            <field name="name">control_previo.form</field>
            <field name="model">solicitudes.control_previo</field>
            <field name="arch" type="xml">
                <form string="Formulario Control Previo">
                    <sheet>
                        <group>
                            <field name="codigo_analisis_juridico"/>
                            <field name="nro_expediente"/>
                            <field name="descripcion_garantia"/>
                            <field name="estatus_analisis_juridico"/>
                            <field name="codigo_credito"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Creacion de la vista para mostrar las inspecciones -->

        <record model="ir.ui.view" id="vista_forma_inspeccciones">
            <field name="name">inspecciones.form</field>
            <field name="model">solicitudes.inspecciones</field>
            <field name="arch" type="xml">
                <form string="Formulario Inspecciones">
                    <sheet>
                        <group>
                            <field name="nro_expediente"/>
                            <field name="tiempo_funcionamiento"/>
                            <field name="cantidad_productos"/>
                            <field name="costos_actividad"/>
                            <field name="sistema_produccion"/> 
                            <field name="clientes"/>
                            <field name="distribucion_espacio_fisico"/> 
                            <field name="condicion_fisica_sanitaria"/>
                            <field name="maquinaria"/>
                            <field name="materia_prima"/> 
                            <field name="observaciones"/>
                            <field name="firma"/>
                            <field name="codigo_credito"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Creacion de la vista para mostrar el informe tecnico -->

        <record model="ir.ui.view" id="vista_forma_informe_tecnico">
            <field name="name">informe_tecnico.form</field>
            <field name="model">solicitudes.informe_tecnico</field>
            <field name="arch" type="xml">
                <form string="Formulario Informe Tecnico">
                    <sheet>
                        <group>
                            <field name="solicitudes_id">
                                <tree string="Solicitud">
                                    <field name="name"/>
                                </tree>
                            </field>
                            <field name="fecha_elaboracion"/>
                            <field name="tipo_empresa"/>
                            <field name="Saldo_Balance_Personal"/>  
                            <field name="Organizacion_Juridica"/> 
                            <field name="Recomendaciones"/> 
                            <field name="firma"/> 
                            <field name="informe_fotografico_inspeccion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="vista_arbol_informe_tecnico">
            <field name="name">informe_tecnico.tree</field>
            <field name="model">solicitudes.informe_tecnico</field>
            <field name="arch" type="xml">
                <tree string="Listado Informe Tecnico">
                    <field name="solicitudes_id"/>
                </tree>
            </field>
        </record>

        <!-- Accion de ventana para solicitudes -->

        <record model="ir.actions.act_window" id="accion_listar_solicitudes">
            <field name="name">Solicitudes</field>
            <field name="res_model">solicitudes.solicitudes</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear solicitud</p>
            </field>
        </record>

        <!-- Accion de ventana para talleres -->

        <record model="ir.actions.act_window" id="accion_listar_talleres">
            <field name="name">Talleres</field>
            <field name="res_model">solicitudes.talleres</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear taller</p>
            </field>
        </record>

        <!-- Accion de ventana para control previo -->

        <record model="ir.actions.act_window" id="accion_listar_controles_previos">
            <field name="name">Controles Previos</field>
            <field name="res_model">solicitudes.control_previo</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear control previo</p>
            </field>
        </record>

        <!-- Accion de ventana para las inspecciones -->

        <record model="ir.actions.act_window" id="accion_listar_inspecciones">
            <field name="name">Inspecciones</field>
            <field name="res_model">solicitudes.inspecciones</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear inspeccion</p>
            </field>
        </record>

       <!-- Accion de ventana para el informe tecnico -->

        <record model="ir.actions.act_window" id="accion_listar_informes_tecnicos">
            <field name="name">Informes Tecnicos</field>
            <field name="res_model">solicitudes.informe_tecnico</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear informe tecnico</p>
            </field>
        </record>

        <!--
            Creacion del menu lateral:
            Se crean las entradas del menu para inspecciones e informe tecnico 
            y se enlazan estas entradas con su accion de ventana respectivas
        -->

        <!-- top level menu: no parent -->
        <menuitem id="menu_principal_talleres" name="Talleres"/>
        <!-- Submenu para Talleres -->
        <menuitem id="menu_talleres" name="Talleres" parent="menu_principal_talleres"/>
        <!-- Entrada de menu para el modelo de Talleres -->
        <menuitem id="item_talleres" name="Talleres" parent="menu_talleres" action="accion_listar_talleres"/>

        <!-- top level menu: no parent -->
        <menuitem id="menu_principal_informacion_credito" name="Informacion de Credito"/>
        <!-- Submenu para Informacion de Credito -->
        <menuitem id="menu_solicitudes" name="Solicitudes" parent="menu_principal_informacion_credito"/>
        <!-- Entrada de menu para el modelo de Solicitudes -->
        <menuitem id="item_solicitudes" name="Solicitudes" parent="menu_solicitudes" action="accion_listar_solicitudes"/>

        <!-- top level menu: no parent -->
        <menuitem id="menu_principal_analisis_juridico" name="Analisis Juridico"/>
        <!-- Submenu para Analisis Juridico -->
        <menuitem id="menu_juridico" name="Garantias" parent="menu_principal_analisis_juridico"/>
        <!-- Entrada de menu para el modelo de Control Previo -->
        <menuitem id="item_control_previo" name="Controles Previos" parent="menu_juridico" action="accion_listar_controles_previos"/>

        <!-- top level menu: no parent -->
        <menuitem id="menu_principal_analisis_economico" name="Analisis Economico"/>
        <!-- Submenu para Analisis Economico -->
        <menuitem id="menu_economico" name="Inspecciones" parent="menu_principal_analisis_economico"/>
        <!-- Entrada de menu para el modelo de Inspecciones -->
        <menuitem id="item_inspecciones" name="Inspecciones" parent="menu_economico" action="accion_listar_inspecciones"/>
        <!-- Entrada de menu para el modelo de Informe Tecnico -->
        <menuitem id="item_informe_tenico" name="Informe tecnico" parent="menu_economico" action="accion_listar_informes_tecnicos"/>

        <!-- top level menu: no parent -->
        <menuitem id="menu_principal_gerencia_credito" name="Gerencia de Credito"/>

        <!-- Full id location:
             action="solicitudes.accion_listar_inspecciones"
             It is not required when it is the same module -->

    </data>
</openerp>

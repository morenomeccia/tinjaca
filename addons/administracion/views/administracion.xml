<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Creacion de la vista para el modelo cuenta por cobrar -->

        <record model="ir.ui.view" id="cuenta_cobrar_view_form">
            <field name="name">cuenta_cobrar.form</field>
            <field name="model">administracion.cuenta_cobrar</field>
            <field name="arch" type="xml">
                <form string="Formulario de Cuentas por Cobrar">
                    <sheet>
                        <group>
                            <field name="solicitudes_id"/>
                            <field name="partida_id"/>
                            <field name="codigo"/>
                            <field name="descripcion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Creacion de la vista para el modelo partida presupuestaria -->

        <record model="ir.ui.view" id="partida_view_form">
            <field name="name">partida.form</field>
            <field name="model">administracion.partida</field>
            <field name="arch" type="xml">
                <form string="Formulario de Partida">
                    <sheet>
                        <group>
                            <field name="codigo"/>
                            <field name="descripcion"/>
                            <field name="cuenta_cobrar_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


	<!-- Vista de lista para el modelo de cuentas por cobrar-->
	<record model="ir.ui.view" id="cuenta_cobrar_view_list">
		<field name="name">lista_cuenta_cobrar</field>
		<field name="model">administracion.cuenta_cobrar</field>
		<field name="arch" type="xml">
		    <tree string="Listado de cuentas por cobrar">
                <field name="solicitudes_id"/>
                <field name="partida_id"/>
                <field name="codigo"/>
                <field name="descripcion"/>
		    </tree>
		</field>
	</record>

	<!-- Vista de lista para el modelo de partida presupuestaria-->
	<record model="ir.ui.view" id="partida_view_list">
		<field name="name">lista_partida</field>
		<field name="model">administracion.partida</field>
		<field name="arch" type="xml">
		    <tree string="Listado de partida">
                <field name="codigo"/>
                <field name="descripcion"/>
                <field name="cuenta_cobrar_id"/>
		    </tree>
		</field>
	</record>

	<!-- Caja de busqueda para el modelo de cuenta por cobrar -->
    <record model="ir.ui.view" id="cuenta_cobrar_view_search">
        <field name="name">caja_de_busqueda_cuenta_cobrar</field>
        <field name="model">administracion.cuenta_cobrar</field>
        <field name="arch" type="xml">
            <search>
                <field name="solicitudes_id"/>
                <field name="partida_id"/>
                <field name="codigo"/>
                <field name="descripcion"/>
            </search>
        </field>
    </record>

    <!-- Caja de busqueda para el modelo de partida presupuestaria-->
    <record model="ir.ui.view" id="partida_view_search">
        <field name="name">caja_de_busqueda_partida</field>
        <field name="model">administracion.partida</field>
        <field name="arch" type="xml">
            <search>
                <field name="codigo"/>
                <field name="descripcion"/>
                <field name="cuenta_cobrar_id"/>
            </search>
        </field>
    </record>

        <!-- Accion de ventana para cuenta por cobrar -->

        <record model="ir.actions.act_window" id="accion_listar_cuenta_cobrar">
            <field name="name">Cuenta por Cobrar</field>
            <field name="res_model">administracion.cuenta_cobrar</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear cuenta por cobrar</p>
            </field>
        </record>

        <!-- Accion de ventana para partida presupuestaria -->

        <record model="ir.actions.act_window" id="accion_listar_partida">
            <field name="name">Partida Presupuestaria</field>
            <field name="res_model">administracion.partida</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear partida</p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="menu_principal_administracion" name="Administracion"/>
        <menuitem id="menu_administracion" name="Administracion" parent="menu_principal_administracion"/>
        <!-- Entrada de menu para el modelo de Credito -->
        <menuitem id="menu_cuenta_cobrar" name="Cuenta por Cobrar" parent="menu_administracion" action="accion_listar_cuenta_cobrar"/>
        <menuitem id="menu_partida" name="Partida" parent="menu_administracion" action="accion_listar_partida"/>

    </data>
</openerp>

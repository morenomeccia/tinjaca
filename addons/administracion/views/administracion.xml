<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Creacion de la vista para el modelo creditos -->

        <record model="ir.ui.view" id="creditos_view_form">
            <field name="name">creditos.form</field>
            <field name="model">administracion.creditos</field>
            <field name="arch" type="xml">
                <form string="Formulario de Creditos">
                    <sheet>
                        <group>
                            <field name="fecha_liquidacion"/>
                            <field name="fecha_ultima"/>
                            <field name="solicitudes_id"/>
                            <field name="nro_expediente_solicitudes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

	<!-- Vista de lista para el modelo de creditos-->
	<record model="ir.ui.view" id="creditos_view_list">
		<field name="name">lista_creditos</field>
		<field name="model">administracion.creditos</field>
		<field name="arch" type="xml">
		    <tree string="Listado de creditos">
                <field name="fecha_liquidacion"/>
                <field name="fecha_ultima"/>
                <field name="solicitudes_id"/>
                <field name="nro_expediente_solicitudes"/>
		    </tree>
		</field>
	</record>

        <!-- Accion de ventana para credito -->

        <record model="ir.actions.act_window" id="accion_listar_credito">
            <field name="name">Credito</field>
            <field name="res_model">administracion.credito</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear credito</p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="menu_principal_administracion" name="Administracion"/>
        <menuitem id="menu_administracion" name="Administracion" parent="menu_principal_administracion"/>
        <!-- Entrada de menu para el modelo de Credito -->
        <menuitem id="menu_credito" name="Credito" parent="menu_administracion" action="accion_listar_credito"/>


    </data>
</openerp>

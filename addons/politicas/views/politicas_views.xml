<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Vista de formulario para el modelo de sectores -->

        <record id="sectores_view_form" model="ir.ui.view">
            <field name="name">sectores.form</field>
            <field name="model">politicas.sectores</field>
            <field name="arch" type="xml">
                <form string="Formulario Sectores">
                    <sheet>
                        <group>
                            <field name="codigo"/>
                            <field name="descripcion"/>
                            <field name="habilitado"/>
                            <field name="tasa_interes_promocionales"/>
                            <field name="tasa_interes_establecidas"/>
                            <field name="tasa_mora"/>
                            <field name="comision_flat"/>
                            <field name="aporte_social"/>
                            <field name="plazo_maximo"/>
                            <field name="monto_maximo"/>
                            <field name="monto_minimo"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sectores_view_tree" model="ir.ui.view">
            <field name="name">sectores.tree</field>
            <field name="model">politicas.sectores</field>
            <field name="arch" type="xml">
                <tree string="Listado Sectores">
                    <field name="codigo"/>
                    <field name="descripcion"/>
                    <field name="habilitado"/>
                </tree>
            </field>
        </record>


        <!-- Vista de formulario para el modelo de montos -->

        <record id="montos_view_form" model="ir.ui.view">
            <field name="name">montos.form</field>
            <field name="model">politicas.montos</field>
            <field name="arch" type="xml">
                <form string="Formulario Montos">
                    <sheet>
                        <group>
                            <field name="sector_id"/>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="montos_view_tree" model="ir.ui.view">
            <field name="name">montos.tree</field>
            <field name="model">politicas.montos</field>
            <field name="arch" type="xml">
                <tree string="Listado Politicas de financiamiento">
                    <field name="sector_id"/>
                </tree>
            </field>
        </record>

        <!-- Accion de ventana para el modelo de sectores -->

        <record id="listar_sectores_action" model="ir.actions.act_window">
            <field name="name">Sectores</field>
            <field name="res_model">politicas.sectores</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear Sector</p>
            </field>
        </record>


        <!-- top level menu: no parent -->
        <menuitem id="politicas_menu" name="Politicas de Financiamiento" groups="fomdes.group_gerente_credito"/>
        <!-- Submenu para Politicas de Financiamiento -->
        <menuitem id="politicas_financiamiento_menu" name="Politicas de Financiamiento" parent="politicas_menu"/>
        <!-- Entrada de menu para el modelo de sector -->
        <menuitem id="sectores_lista_menu" name="Listar Sectores" parent="politicas_financiamiento_menu" action="listar_sectores_action"/>

    </data>
</openerp>


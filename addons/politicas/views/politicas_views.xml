<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Creacion de la vista para mostrar las politicas de financiamiento -->

        <record id="montos_view_form" model="ir.ui.view">
            <field name="name">montos.form</field>
            <field name="model">politicas.montos</field>
            <field name="arch" type="xml">
                <form string="Formulario Politicas de financiamiento">
                    <sheet>
                        <group>
                            <field name="sector_id"/>
                            <field name="tasa_interes_promocional"/>
                            <field name="tasa_interes_establecida"/>
                            <field name="tasa_mora"/>
                            <field name="comision_flat"/>
                            <field name="aporte_social"/>
                            <field name="plazo_maximo"/>
                            <field name="monto_maximo"/>
                            <field name="monto_minimo"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="montos_view_tree" model="ir.ui.view">
            <field name="name">montos.tree</field>
            <field name="model">politicas.montos</field>
            <field name="arch" type="xml">
                <tree string="Listado Politicas de financiamiento">
                    <field name="sector_id"/>
                </tree>
            </field>
        </record>

        <!-- Accion de ventana para politicas de financiamiento -->

        <record id="listar_montos_action" model="ir.actions.act_window">
            <field name="name">Politicas de financiamiento</field>
            <field name="res_model">politicas.montos</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Modificar politicas de financiamiento</p>
            </field>
        </record>


        <!-- top level menu: no parent -->
        <menuitem id="montos_main_menu" name="Politicas FOMDES" groups='gerente_credito' />
        <!-- Submenu para politicas -->
        <menuitem id="montos_menu" name="Politicas FOMDES" parent="montos_main_menu"/>
        <!-- Entrada de menu para el modelo de politicas del FOMDES -->
        <menuitem id="montos_menu_item" name="Ver politicas del FOMDES" parent="montos_menu" action="listar_montos_action"/>

    </data>
</openerp>

